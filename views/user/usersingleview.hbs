<div class="product_image_area">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12" style="margin-top: 383px;">
          <div class="product_img_slide owl-carousel" style="width: 1127px; height:180px;padding-left: 491px;">
            <div class="single_product_img">
              <img src="/images/uploads/{{catogeriesview.images.[0]}}" alt="#" class="img-fluid">
            </div>
            <div class="single_product_img">
              <img src="/images/uploads/{{catogeriesview.images.[1]}}" alt="#" class="img-fluid">
            </div>
            <div class="single_product_img">
              <img src="/images/uploads/{{catogeriesview.images.[2]}}" alt="#" class="img-fluid">
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="single_product_text text-center">
            <h3>{{catogeriesview.description}}</h3>
            <p>{{catogeriesview.description}}</p>
            <div class="card_area">
                <div class="product_count_area">
                    <p>Quantity:{{catogeriesview.quantity}}</p>
                    <div class="product_count d-inline-block">
                        <span class="product_count_item inumber-decrement"> <i class="fa-sharp fa-light fa-minus"></i></span>
                        <input class="product_count_item input-number" type="text" value="1" min="0" max="10">
                        <span class="product_count_item number-increment"> <i class="fa-thin fa-plus"></i></span>
                    </div>
                    <p><i class="fa-solid fa-indian-rupee-sign"></i>{{catogeriesview.price}}</p>
                </div>
              <div class="add_to_cart">
                  <a href="/addtocart?id={{_id}}" class="btn_3">add to cart</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>