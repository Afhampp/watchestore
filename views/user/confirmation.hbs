<button type="button" class="btn btn-danger btn-sm" style="margin-left: 4px;" onclick="downloadPDF()">Export to PDF</button>


<section class="confirmation_part section_padding">
    <div class="container" id="datatable">
      <div class="row">
        <div class="col-lg-12">
          <div class="confirmation_tittle">
            <span>Thank you. Your order has been received.</span>
          </div>
        </div>
        {{#with x}}
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>order info</h4>
            <ul>
              <li>
                <p>order id</p><span>: {{_id}}</span>
              </li>
              <li>
                <p>data</p><span>: {{date}}</span>
              </li>
              <li>
                <p>total</p><span>: {{totalprice}}</span>
              </li>
              <li>
                <p>payment methord</p><span>: {{paymentmethod}}</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
            <h4>Billing Address</h4>
            <ul>
              <li>
                <p>Address</p><span>: {{address.[0].address}}</span>
              </li>
              <li>
                <p>District</p><span>: {{address.[0].district}}</span>
              </li>
              <li>
                <p>city/town</p><span>: {{address.[0].town}}</span>
              </li>
              <li>
                <p>country</p><span>: {{address.[0].country}}</span>
              </li>
              <li>
                <p>pincode</p><span>: {{address.[0].pincode}}</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-6 col-lx-4">
          <div class="single_confirmation_details">
           
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="order_details_iner">
            <h3>Order Details</h3>
            <table class="table table-borderless">
              <thead>
                <tr>
                  <th scope="col" colspan="2">Product</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                {{#each productinfo}}
                <tr>
                  <th colspan="2"><span>{{name}}</span></th>
                  <th>{{quantitypro}}</th>
                  <th> <span>{{tprice}}</span></th>
                </tr>
                {{/each}}
                <tr>
                  <th colspan="3">shipping</th>
                  <th><span>flat rate: $50.00</span></th>
                </tr>
              </tbody>
              <tfoot>
                <tr>
                  <th scope="col" colspan="3">Total</th>
                  <th><span>{{totalprice}}</span></th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
        {{/with}}
      </div>
    </div>
  </section>
  <div id="capture-div">
  <!-- Your HTML content here -->
</div>
<script>
             function downloadPDF() {
            var table = document.getElementById("datatable");
            var newWin = window.open('', 'Print-Window');
            newWin.document.open();
            newWin.document.write('<html><body onload="window.print()">' + table.outerHTML + '</html>');
            newWin.document.close();
            setTimeout(function () { newWin.close(); }, 10);
		      }
        </script>
           <script>
            function downloadExcel() {
  var table = document.getElementById("datatable");
  var worksheet = XLSX.utils.table_to_sheet(table);
  var workbook = XLSX.utils.book_new();
  XLSX.utils.book_append_sheet(workbook, worksheet, "Sheet1");
  XLSX.writeFile(workbook, "table.xlsx");
}
         </script>


