<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row">
      <div class="col">
      </div>
    </div>
    <form action="/profilesubmit?id={{details._id}}" method="post" enctype="multipart/form-data">
    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            {{#if details.images}}
            <img src="/images/uploads/{{details.images}}" alt="profile"
             {{/if}}
              class="rounded-circle img-fluid" style="width: 150px;">
              <input type="file" class="form-control" id="file-input" name="file"  style="position: absolute;top: 20px;width: 144px;left: 105px;opacity: 0;height: 153px; " >
            <h5 class="my-3">{{details.name}}</h5>
            <div class="d-flex justify-content-center mb-2">
              <div id="profile-button-container" style="display: none;">
             
             <button type="onsubmit" class="btn btn-primary">profile</button>

             </div>
            </div>
          </div>
        </div>
        </form>
        <div class="card mb-4 mb-lg-0">
          
        </div>
      </div>
      
      <div class="col-lg-6">
        <form>
        <div class="card mb-4">
          <div class="card-body">
              
            <div class="row">
             
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{details.name}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{details.email}}</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{details.phone}}</p>
              </div>
            </div>
            <hr>
            
           
         <a href="/edit?id={{details._id}}"><button  type="button" class="btn btn-primary">edit</button></a>
          </div>
        </div>
       
       </form>
      </div>
      <div class="col-lg-2" >
        <div class="card mb-4">
          <div class="card-body">
          <p>wallet:{{details.wallet}}</p>
           
            
           
         
          </div>
        </div>
        
        
      </div>
      
      
    </div>
  </div>
</section>
<script>
  const fileInput = document.getElementById('file-input');
  const profileButtonContainer = document.getElementById('profile-button-container');

  fileInput.addEventListener('change', () => {
    if (fileInput.files.length > 0) {
      profileButtonContainer.style.display = 'block';
    } else {
      profileButtonContainer.style.display = 'none';
    }
  });
</script>
