
 <main id="main" class="main">
   <div class="col-12">
              <div class="card recent-sales overflow-auto">

                <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div>

                <div class="card-body">
                  <h5 class="card-title">Recent Sales <span>| Today</span></h5>

                  <table class="table table-borderless datatable">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">brand</th>
      <th scope="col">price</th>
       <th scope="col">quantity</th>
        <th scope="col">describtion</th>
         <th scope="col">images</th>
            <th scope="col">edit</th>
               <th scope="col">list/unlist</th>
    </tr>
  </thead>
  <tbody>
    {{#each showproduct}}
    <tr>
      <th >{{@index}}</th>
      <td>{{name}}</td>
      <td>{{brand}}</td>
      <td>{{price}}</td>
      <td>{{quantity}}</td>
      <td>{{description}}</td>
      
       <td><img src="/images/uploads/{{images.[0]}}" alt="..." style="       width: 70%;
    height: 51px;">
      
</td>

      <td><a href="/admin/editpage?id={{id}}" style="text-decoration: none;"><button type="button" class="btn btn-primary">view</button></a></td>
      {{#if is_listed}}
      <td><a href="/admin/unlistpro?id={{_id}}"  style="text-decoration: none;"><button type="button" class="btn btn-danger">unlist</button></a></td>
      {{else}}
      <td><a href="/admin/listpro?id={{id}}" style="text-decoration: none;"><button type="button" class="btn btn-success">list</button></a></td>
      {{/if}}
    </tr>
   {{/each}}
  </tbody>
</table>

                </div>

              </div>
            </div><!-- End Recent Sales -->

</main>