<!doctype html>
<html lang="en">
  <head>
  	<title>Login 01</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	

   

	
<link rel='stylesheet' href='/stylesheets/adminstyle.css' />

	</head>
	<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Login #01</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-7 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
		      
		      	<h3 class="text-center mb-4">Sign In</h3>
						<form action="/admin/login" method="post" class="login-form" >
		      		<div class="form-group">
		      			<input type="text" class="form-control rounded-left" name="admin" placeholder="Admin" required>
		      		</div>
					 {{#if emailmessage}}
                          <p class="text-danger">{{emailmessage}}</p>
                          {{/if}}
	            <div class="form-group d-flex">
	              <input type="password" class="form-control rounded-left" name="password" placeholder="Password" required>
	            </div>
				 {{#if passmessage}}
                          <p class="text-danger">{{passmessage}}</p>
                          {{/if}}
	            <div class="form-group">
	            	<button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
	            </div>
	            <div class="form-group d-md-flex">
	            	<div class="w-50">
	            		<label class="checkbox-wrap checkbox-primary">Remember Me
									  <input type="checkbox" checked>
									  <span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="#">Forgot Password</a>
								</div>
	            </div>
	          </form>
	        </div>
				</div>
			</div>
		</div>
	</section>



	</body>
</html>

